{
	"diagnostic.enable": true,
	"diagnostic.virtualText": true,
	"diagnostic.virtualTextCurrentLineOnly": true,
	"codeLens.enable": true,
	"languageserver": {
	  "elixirLS": {
	    "command": "~/.config/nvim/elixir-ls/release/language_server.sh",
	    "filetypes": ["elixir", "eelixir"]
	  },
	  "tsserver": {
	    "enable": true,
	    "filetypes": ["typescript", "tsx", "javascript", "typescriptreact"],
	  },
	  "golang": {
	      "command": "gopls",
	      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
	      "filetypes": ["go"]
	    }
	}
}
