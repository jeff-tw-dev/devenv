[
    // üåê LSP Navigation
    {
        "key": "space t",
        "command": "editor.action.goToTypeDefinition",
        "when": "editorHasImplementationProvider && editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space i",
        "command": "editor.action.goToImplementation",
        "when": "editorHasImplementationProvider && editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space r",
        "command": "editor.action.goToReferences",
        "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && vim.mode != 'Insert'"
    },
    {
        "key": "space d",
        "command": "editor.action.revealDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space s",
        "command": "typescript.goToSourceDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "shift+k",
        "command": "editor.action.showHover",
        "when": "editorTextFocus && vim.mode == 'Normal'"
    },

    // üìÅ File Tree (like nvim-tree)
    {
        "key": "space n t",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space n t",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "filesExplorerFocus && vim.mode != 'Insert'"
    },
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "explorerViewletVisible && !inputFocus && vim.mode == 'Normal'"
    },
    {
        "key": "d",
        "command": "deleteFile",
        "when": "explorerViewletVisible && !inputFocus && vim.mode == 'Normal'"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "explorerViewletVisible && !inputFocus && vim.mode == 'Normal'"
    },
    {
        "key": "j",
        "command": "list.focusDown",
        "when": "explorerViewletVisible && !inputFocus && vim.mode == 'Normal'"
    },
    {
        "key": "k",
        "command": "list.focusUp",
        "when": "explorerViewletVisible && !inputFocus && vim.mode == 'Normal'"
    },
    {
        "key": "enter",
        "command": "list.toggleExpand",
        "when": "explorerViewletVisible && !inputFocus && vim.mode == 'Normal'"
    },
    {
        "key": "c",
        "command": "filesExplorer.copy",
        "when": "explorerViewletVisible && !inputFocus && vim.mode == 'Normal'"
    },
    {
        "key": "v",
        "command": "filesExplorer.paste",
        "when": "explorerViewletVisible && !inputFocus && vim.mode == 'Normal'"
    },
    {
        "key": "x",
        "command": "filesExplorer.cut",
        "when": "explorerViewletVisible && !inputFocus && vim.mode == 'Normal'"
    },
    {
        "key": "i",
        "command": "workbench.files.action.showActiveFileInExplorer",
        "when": "explorerViewletVisible && !inputFocus && vim.mode == 'Normal'"
    },
    // üß≠ Editor Window Splitting & Navigation
    {
        "key": "space v",
        "command": "workbench.action.splitEditorDown",
        "when": "editorFocus && vim.mode == 'Normal'"
    },
    {
        "key": "space [Period]",
        "command": "workbench.action.splitEditorRight",
        "when": "editorFocus && vim.mode == 'Normal'"
    },
    {
        "key": "space [Comma]",
        "command": "workbench.action.splitEditorLeft",
        "when": "editorFocus && vim.mode == 'Normal'"
    },
    {
        "key": "space h",
        "command": "workbench.action.previousEditor",
        "when": "editorFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "space l",
        "command": "workbench.action.nextEditor",
        "when": "editorFocus && vim.active && vim.mode != 'Insert'"
    },
    // üîç File & Project Search (like telescope)
    {
        "key": "f f",
        "command": "find-it-faster.findWithinFiles",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "space f",
        "command": "find-it-faster.findFiles",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "f w",
        "command": "filesExplorer.findInWorkspace",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    // üß† Misc
    {
        "key": "space m",
        "command": "editor.action.showContextMenu",
        "when": "textInputFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "space c",
        "command": "workbench.action.editor.previousChange",
        "when": "editorTextFocus && !textCompareEditorActive && vim.mode == 'Normal'"
    }
]
